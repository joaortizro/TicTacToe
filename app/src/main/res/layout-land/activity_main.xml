<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.example.jonas.tictactoe.BoardView
                android:id="@+id/board"
                android:layout_width="250dp"
                android:layout_height="250dp">
            </com.example.jonas.tictactoe.BoardView>
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Scores"
                android:textSize="@dimen/activity_horizontal_margin"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/human"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/score"
                android:text="Human:    " />

            <TextView
                android:id="@+id/human_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/human"
                android:layout_alignRight="@+id/human"
                android:text="0" />

            <TextView
                android:id="@+id/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/human"
                android:text="Android:    " />

            <TextView
                android:id="@+id/android_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/android"
                android:layout_alignRight="@+id/android"
                android:text="0" />

            <TextView
                android:id="@+id/ties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/android"
                android:text="Ties:    " />

            <TextView
                android:id="@+id/ties_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/ties"
                android:layout_alignRight="@+id/ties"
                android:text="0" />

        </LinearLayout>







        <android.support.design.widget.BottomNavigationView
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>